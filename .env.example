# Application Configuration
APP_NAME=dreon-auth
APP_VERSION=1.0.0
HTTP_HOST=localhost
HTTP_PORT=8080

# Cache Configuration
CACHE_DEFAULT_EXPIRE_TIME_SEC=3600
CACHE_CLEANUP_INTERVAL_HOUR=24

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration
POSTGRES_CONNECTION_NAME=
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DBNAME=dreon_auth
POSTGRES_SCHEMA=public
POSTGRES_MAX_IDLE_CONNECTION=5
POSTGRES_MAX_OPEN_CONNECTION=50
POSTGRES_MAX_LIFE_TIME=1800
POSTGRES_SSL=false

# JWT Configuration (Optional)
JWT_PRIVATE_KEY=your_jwt_private_key_here
JWT_PUBLIC_KEY=your_jwt_public_key_here
JWT_ACCESS_TOKEN_EXPIRES_IN=3600
JWT_REFRESH_TOKEN_EXPIRES_IN=86400

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
